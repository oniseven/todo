{
  "compilerOptions": {
    "target": "es2016", 
    "experimentalDecorators": true, 
    "module": "commonjs", 
    "moduleResolution": "node10", 
    "typeRoots": ["./node_modules/@types", "./src/types/**/*"], 
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./**/__tests__"]
}
